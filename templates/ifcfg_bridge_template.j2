DEVICE={{ libvirt_host_networks[bridge_idx].bridge_device }}
NAME={{ libvirt_host_networks[bridge_idx].bridge_device }}
TYPE={{ libvirt_host_networks[bridge_idx].ifcfg_type }}
ONBOOT=yes
{% if libvirt_host_networks[bridge_idx].ifcfg_bootproto == "dhcp" %}
BOOTPROTO={{ libvirt_host_networks[bridge_idx].ifcfg_bootproto }}
{% elif libvirt_host_networks[bridge_idx].ifcfg_bootproto == "none" %}
BOOTPROTO=static
IPADDR={{ libvirt_host_networks[bridge_idx].ipaddress }}
GATEWAY={{ libvirt_host_networks[bridge_idx].gateway }}
PREFIX={{ libvirt_host_networks[bridge_idx].mask_prefix }}
{% endif %}
ZONE=public
DELAY=0
